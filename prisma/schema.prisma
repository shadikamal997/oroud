// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// City Model
model City {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  areas Area[]
  shops Shop[]
  ads   Ad[]

  @@map("cities")
}

// Area Model
model Area {
  id        String   @id @default(uuid())
  name      String
  cityId    String
  zone      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  city  City   @relation(fields: [cityId], references: [id], onDelete: Cascade)
  shops Shop[]

  @@index([cityId])
  @@map("areas")
}

// User Model
model User {
  id        String   @id @default(uuid())
  phone     String   @unique
  role      UserRole @default(USER)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  shops        Shop[]
  reports      Report[]
  deviceTokens DeviceToken[]
  savedOffers  SavedOffer[]

  @@index([phone])
  @@index([role])
  @@map("users")
}

// Shop Model
model Shop {
  id           String    @id @default(uuid())
  userId       String
  name         String
  logoUrl      String?
  cityId       String
  areaId       String
  latitude     Float
  longitude    Float
  trustScore   Int       @default(70)
  isPremium    Boolean   @default(false)
  premiumUntil DateTime?
  isVerified   Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  city   City   @relation(fields: [cityId], references: [id])
  area   Area   @relation(fields: [areaId], references: [id])
  offers Offer[]

  @@index([userId])
  @@index([cityId])
  @@index([areaId])
  @@index([latitude, longitude])
  @@index([trustScore])
  @@index([isPremium])
  @@index([premiumUntil])
  @@index([isVerified])
  @@map("shops")
}

// Offer Model
model Offer {
  id                 String   @id @default(uuid())
  shopId             String
  title              String
  description        String?
  originalPrice      Float
  discountedPrice    Float
  discountPercentage Float
  imageUrl           String
  expiryDate         DateTime
  isActive           Boolean  @default(true)
  isSuspicious       Boolean  @default(false)
  reportCount        Int      @default(0)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  shop      Shop            @relation(fields: [shopId], references: [id], onDelete: Cascade)
  reports   Report[]
  analytics OfferAnalytics?
  savedBy   SavedOffer[]
  crazyDeals CrazyDeal[]

  @@index([shopId])
  @@index([expiryDate])
  @@index([isActive])
  @@index([discountPercentage])
  @@index([reportCount])
  @@index([isSuspicious])
  @@index([createdAt])
  @@map("offers")
}

// Report Model
model Report {
  id        String   @id @default(uuid())
  offerId   String
  userId    String
  reason    String
  createdAt DateTime @default(now())

  offer Offer @relation(fields: [offerId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([offerId])
  @@index([userId])
  @@index([createdAt])
  @@map("reports")
}

// DeviceToken Model
model DeviceToken {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  cityId    String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([cityId])
  @@map("device_tokens")
}

// OfferAnalytics Model
model OfferAnalytics {
  id               String   @id @default(uuid())
  offerId          String   @unique
  views            Int      @default(0)
  saves            Int      @default(0)
  clicks           Int      @default(0)
  viewBonusAwarded Boolean  @default(false)
  saveBonusAwarded Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  offer Offer @relation(fields: [offerId], references: [id], onDelete: Cascade)

  @@index([offerId])
  @@map("offer_analytics")
}

// SavedOffer Model (tracks which users saved which offers)
model SavedOffer {
  id        String   @id @default(uuid())
  userId    String
  offerId   String
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  offer Offer @relation(fields: [offerId], references: [id], onDelete: Cascade)

  @@unique([userId, offerId])
  @@index([userId])
  @@index([offerId])
  @@map("saved_offers")
}

// AdminLog Model
model AdminLog {
  id         String   @id @default(uuid())
  action     String
  entityType String
  entityId   String
  createdAt  DateTime @default(now())

  @@index([entityType, entityId])
  @@index([createdAt])
  @@map("admin_logs")
}

// Ad Model
model Ad {
  id          String      @id @default(uuid())
  title       String
  imageUrl    String
  redirectUrl String
  placement   AdPlacement
  cityId      String?
  isActive    Boolean     @default(true)
  startDate   DateTime
  endDate     DateTime
  priority    Int         @default(0)
  createdAt   DateTime    @default(now())

  city City? @relation(fields: [cityId], references: [id])

  @@index([placement])
  @@index([cityId])
  @@index([isActive])
  @@index([startDate])
  @@index([endDate])
  @@index([priority])
  @@map("ads")
}

// CrazyDeal Model
model CrazyDeal {
  id        String   @id @default(uuid())
  offerId   String
  date      DateTime
  createdAt DateTime @default(now())

  offer Offer @relation(fields: [offerId], references: [id], onDelete: Cascade)

  @@unique([offerId, date])
  @@index([date])
  @@map("crazy_deals")
}

// Enums
enum UserRole {
  USER
  SHOP
  ADMIN
}

enum AdPlacement {
  HOME_FEED
  CATEGORY_TOP
  SPLASH
}
